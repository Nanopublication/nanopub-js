{
  "name": "@nanopub/utils",
  "version": "1.0.4",
  "description": "A JavaScript library for retrieving and querying nanopublications.",
  "author": {
    "name": "Tobias Kuhn",
    "email": "kuhntobias@gmail.com",
    "url": "https://www.tkuhn.org"
  },
  "repository": "https://github.com/Nanopublication/nanopub-js",
  "license": "MIT",
  "main": "src/index.ts",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "scripts": {
    "dev": "tsc -w",
    "dev:html": "vite",
    "test": "jest",
    "build": "tsc",
    "build:vite": "vite build",
    "build:rollup": "tsc && BUNDLE=true rollup -c",
    "lint": "eslint src --ext .ts --fix",
    "clean": "rimraf build && rimraf node_modules",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
  },
  "dependencies": {
    "n3": "^1.16.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/jest": "^29.4.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "codecov": "^3.5.0",
    "eslint-config-custom": "*",
    "jest": "^29.5.0",
    "node-json2html": "^2.2.3",
    "prettier": "^2.1.1",
    "rimraf": "^4.4.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "vite": "^4.1.4"
  },
  "keywords": [
    "nanopublications",
    "rdf",
    "typescript"
  ]
}
